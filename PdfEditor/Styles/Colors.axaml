<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="BrandPrimary">#0078D4</Color>
    <Color x:Key="BrandPrimaryHover">#106EBE</Color>
    <Color x:Key="BrandPrimaryPressed">#005A9E</Color>

    <!-- Background Colors -->
    <Color x:Key="AppBackground">#FFFFFF</Color>
    <Color x:Key="SecondaryBackground">#F5F5F5</Color>
    <Color x:Key="TertiaryBackground">#FAFAFA</Color>
    <Color x:Key="SidebarBackground">#F0F0F0</Color>
    <Color x:Key="ToolbarBackground">#FFFFFF</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>

    <!-- Border and Divider Colors -->
    <Color x:Key="Border">#E0E0E0</Color>
    <Color x:Key="Divider">#D0D0D0</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#1F1F1F</Color>
    <Color x:Key="TextSecondary">#666666</Color>
    <Color x:Key="TextTertiary">#999999</Color>

    <!-- State Colors -->
    <Color x:Key="Selected">#E3F2FD</Color>
    <Color x:Key="Hover">#F0F0F0</Color>
    <Color x:Key="Pressed">#E0E0E0</Color>

</ResourceDictionary>
