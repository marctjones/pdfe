<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Pdfe.Demo.SpecCoverageWindow"
        Title="Pdfe.Rendering - PDF 2.0 Spec Coverage"
        Width="1200" Height="800"
        Background="#1E1E1E">

    <Grid ColumnDefinitions="340,*">
        <!-- Sidebar: Feature Status -->
        <Border Grid.Column="0" Background="#252526" BorderBrush="#3C3C3C" BorderThickness="0,0,1,0">
            <ScrollViewer>
                <StackPanel Margin="16" Spacing="8">
                    <!-- Header -->
                    <TextBlock Text="PDF 2.0 Spec Coverage" FontSize="20" FontWeight="Bold"
                               Foreground="#FFFFFF" Margin="0,0,0,8"/>

                    <!-- Legend -->
                    <Border Background="#2D2D30" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Width="16" Height="16" CornerRadius="3" Background="#4EC9B0"/>
                                <TextBlock Text="Implemented" Foreground="#CCCCCC" FontSize="12"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Width="16" Height="16" CornerRadius="3" Background="#DCDCAA"/>
                                <TextBlock Text="In Progress" Foreground="#CCCCCC" FontSize="12"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Width="16" Height="16" CornerRadius="3" Background="#6E6E6E"/>
                                <TextBlock Text="Not Started" Foreground="#CCCCCC" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Overall Progress -->
                    <Border Background="#2D2D30" CornerRadius="6" Padding="12" Margin="0,0,0,16">
                        <StackPanel Spacing="8">
                            <TextBlock x:Name="OverallProgressLabel" Text="Overall: 0/0 (0%)"
                                       FontSize="14" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                            <ProgressBar x:Name="OverallProgressBar" Minimum="0" Maximum="100" Value="0"
                                         Height="8" Foreground="#4EC9B0" Background="#3C3C3C"/>
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <TextBlock x:Name="ImplementedCount" Text="0 done" Foreground="#4EC9B0" FontSize="11"/>
                                <TextBlock x:Name="InProgressCount" Text="0 active" Foreground="#DCDCAA" FontSize="11"/>
                                <TextBlock x:Name="NotStartedCount" Text="0 todo" Foreground="#6E6E6E" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Categories -->
                    <TextBlock Text="GRAPHICS STATE" FontWeight="Bold" Foreground="#569CD6" FontSize="11" Margin="0,8,0,4"/>
                    <StackPanel x:Name="GraphicsStatePanel" Spacing="2"/>

                    <TextBlock Text="PATH CONSTRUCTION" FontWeight="Bold" Foreground="#569CD6" FontSize="11" Margin="0,12,0,4"/>
                    <StackPanel x:Name="PathConstructionPanel" Spacing="2"/>

                    <TextBlock Text="PATH PAINTING" FontWeight="Bold" Foreground="#569CD6" FontSize="11" Margin="0,12,0,4"/>
                    <StackPanel x:Name="PathPaintingPanel" Spacing="2"/>

                    <TextBlock Text="COLOR OPERATORS" FontWeight="Bold" Foreground="#569CD6" FontSize="11" Margin="0,12,0,4"/>
                    <StackPanel x:Name="ColorOperatorsPanel" Spacing="2"/>

                    <TextBlock Text="TEXT OPERATORS" FontWeight="Bold" Foreground="#569CD6" FontSize="11" Margin="0,12,0,4"/>
                    <StackPanel x:Name="TextOperatorsPanel" Spacing="2"/>

                    <TextBlock Text="XOBJECTS &amp; IMAGES" FontWeight="Bold" Foreground="#569CD6" FontSize="11" Margin="0,12,0,4"/>
                    <StackPanel x:Name="XObjectPanel" Spacing="2"/>

                    <TextBlock Text="CLIPPING" FontWeight="Bold" Foreground="#569CD6" FontSize="11" Margin="0,12,0,4"/>
                    <StackPanel x:Name="ClippingPanel" Spacing="2"/>

                    <TextBlock Text="SHADING &amp; PATTERNS" FontWeight="Bold" Foreground="#569CD6" FontSize="11" Margin="0,12,0,4"/>
                    <StackPanel x:Name="ShadingPanel" Spacing="2"/>

                    <TextBlock Text="TRANSPARENCY" FontWeight="Bold" Foreground="#569CD6" FontSize="11" Margin="0,12,0,4"/>
                    <StackPanel x:Name="TransparencyPanel" Spacing="2"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto" Background="#1E1E1E">
            <!-- Toolbar -->
            <Border Grid.Row="0" Background="#333333" Padding="12,8">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <Button x:Name="RefreshButton" Content="Refresh" Click="RefreshButton_Click"
                            Background="#0E639C" Foreground="White" Padding="12,6"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="DPI:" VerticalAlignment="Center" Foreground="#CCCCCC"/>
                        <ComboBox x:Name="DpiComboBox" SelectedIndex="1" SelectionChanged="DpiComboBox_SelectionChanged"
                                  Background="#3C3C3C" Foreground="#CCCCCC" Width="80">
                            <ComboBoxItem Content="72"/>
                            <ComboBoxItem Content="150"/>
                            <ComboBoxItem Content="300"/>
                        </ComboBox>
                    </StackPanel>
                    <TextBlock x:Name="RenderTimeLabel" VerticalAlignment="Center" Foreground="#6A9955" FontFamily="Consolas"/>
                </StackPanel>
            </Border>

            <!-- Rendered PDF -->
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                          Background="#1E1E1E">
                <Border BorderBrush="#3C3C3C" BorderThickness="1" Margin="16" Background="White"
                        BoxShadow="0 4 12 #40000000">
                    <Image x:Name="PageImage" Stretch="None"/>
                </Border>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#007ACC" Padding="12,6">
                <StackPanel Orientation="Horizontal" Spacing="24">
                    <TextBlock x:Name="SizeLabel" Text="" Foreground="White" FontSize="12"/>
                    <TextBlock Text="Pdfe.Rendering Demo" Foreground="#FFFFFF" FontSize="12" Opacity="0.8"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
